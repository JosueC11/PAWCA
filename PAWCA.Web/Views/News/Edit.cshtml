@model PAWCA.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Edit your comments";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">Editar Comentario</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" asp-controller="News" method="post">
                        <input type="hidden" asp-for="ArticleId" />
                        <input type="hidden" asp-for="Link" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <input type="hidden" asp-for="Description" />
                        <input type="hidden" asp-for="Title" />
                        <input type="hidden" asp-for="Favorite" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Título</label>
                            <input type="text" class="form-control" value="@Model.Title" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Descripción</label>
                            <textarea class="form-control" rows="3" value="@Model.Description" readonly>@Model.Description</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Fecha de publicación</label>
                            <input type="text" class="form-control" value="@Model.PubDate.ToString("dd MMM yyyy")" readonly />
                        </div>
                        <p>@Model.Comment</p>
                        <div class="mb-3">
                            <label asp-for="Comment" class="form-label fw-bold">Comentario</label>
                            <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Escribe tu comentario aquí..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-success">Guardar Comentario</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

